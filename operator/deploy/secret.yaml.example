# Qualys API Credentials Secret
#
# IMPORTANT: Copy this file to secret.yaml and fill in your credentials.
# DO NOT commit the actual secret.yaml file!
#
# Create the secret:
#   kubectl create secret generic qualys-credentials \
#     --from-literal=username=YOUR_USERNAME \
#     --from-literal=password=YOUR_PASSWORD \
#     -n qualys-system
#
# Or apply this file after editing:
#   cp secret.yaml.example secret.yaml
#   # Edit secret.yaml with your base64-encoded credentials
#   kubectl apply -f secret.yaml
---
apiVersion: v1
kind: Namespace
metadata:
  name: qualys-system
---
apiVersion: v1
kind: Secret
metadata:
  name: qualys-credentials
  namespace: qualys-system
type: Opaque
data:
  # Base64 encode your credentials:
  #   echo -n 'your_username' | base64
  #   echo -n 'your_password' | base64
  username: REPLACE_WITH_BASE64_USERNAME
  password: REPLACE_WITH_BASE64_PASSWORD
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: qualys-config
  namespace: qualys-system
data:
  # Qualys Platform: US1, US2, US3, US4, EU1, EU2, CA1, IN1, AE1, UK1, AU1, KSA1
  QUALYS_PLATFORM: "US2"

  # Or specify gateway URL directly (overrides platform)
  # QUALYS_GATEWAY_URL: "gateway.qg2.apps.qualys.com"

  # Policy generation settings
  LOOKBACK_HOURS: "24"
  ACTION: "Post"  # "Post" for audit, "Sigkill" for blocking
